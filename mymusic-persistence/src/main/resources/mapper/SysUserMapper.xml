<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mymusic.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mymusic.domain.SysUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="sex" property="sex" />
        <result column="phone_num" property="phoneNum" />
        <result column="email" property="email" />
        <result column="birth" property="birth" />
        <result column="introduction" property="introduction" />
        <result column="location" property="location" />
        <result column="avator" property="avator" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="enabled" property="enabled" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, sex, phone_num, email, birth, introduction, location, avator, create_time, update_time, enabled
    </sql>
    <select id="getStaticSex" resultType="com.mymusic.common.domain.StatisticsVo">
          select sex as name,count(1) as value from sys_user GROUP BY sex;
    </select>

    <select id="getStaticLocation" resultType="com.mymusic.common.domain.StatisticsVo">
         select location as name,count(1) as value from sys_user GROUP BY location;
    </select>

    <select id="getTotalUsers" resultType="java.lang.Long" >
          select count(1) from sys_user;
    </select>

    <select id="getAddNumbers" resultType="java.lang.Long">
         select count(1) from sys_user where create_time between  #{startTime} and #{endTime}
    </select>
</mapper>
